# Vagrantfile

Vagrant.configure("2") do |config|
  
  # Define Ubuntu machine
  config.vm.define "ubuntu" do |ubuntu|
    ubuntu.vm.box = "ubuntu/bionic64"
    ubuntu.vm.hostname = "ubuntu-vm"
    
    # Network configuration
    ubuntu.vm.network "private_network", ip: "192.168.33.10"

    # Provisioning script for Ubuntu
    ubuntu.vm.provision "shell", inline: <<-SHELL
      sudo apt-get update
      sudo apt-get install -y apache2
      echo "<h1>Welcome to Ubuntu VM!</h1>" | sudo tee /var/www/html/index.html
    SHELL
  end

  # Define CentOS machine
  config.vm.define "centos" do |centos|
    centos.vm.box = "centos/7"
    centos.vm.hostname = "centos-vm"
    
    # Network configuration
    centos.vm.network "private_network", ip: "192.168.33.11"

    # Provisioning script for CentOS
    centos.vm.provision "shell", inline: <<-SHELL
      sudo yum update -y
      sudo yum install -y httpd
      sudo systemctl start httpd
      sudo systemctl enable httpd
      echo "<h1>Welcome to CentOS VM!</h1>" | sudo tee /var/www/html/index.html
    SHELL
  end

end


